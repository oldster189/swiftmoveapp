<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fancy:cardElevation="2dp"

            fancy:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/linear1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/imageCardDriver"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/nobody"
                            app:civ_border_color="#0099cc"
                            app:civ_border_width="2dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textViewCardName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="8dp" />

                            <TextView
                                android:id="@+id/tvDistance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:background="@drawable/bg_oval_purple"
                                android:padding="4dp"

                                android:textColor="@color/white" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/textViewCardTitlePrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp" />


                            <TextView
                                android:id="@+id/textViewCardPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="คิดตามระยะทาง " />


                            <TextView
                                android:id="@+id/textViewCardRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="คนขับช่วยยกของ" />

                            <TextView
                                android:id="@+id/textViewCardFree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/line1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/linear1"
                    android:background="#c9c9c9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/line1"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/btnDetail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="24dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            fancy:fb_borderColor="#FFFFFF"
                            fancy:fb_borderWidth="1dp"
                            fancy:fb_defaultColor="#5f6c72"
                            fancy:fb_focusColor="#767e81"
                            fancy:fb_iconPosition="left"
                            fancy:fb_radius="30dp"
                            fancy:fb_text="รายละเอียด"
                            fancy:fb_textColor="#FFFFFF"
                            fancy:fb_textSize="16sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <mehdi.sakout.fancybuttons.FancyButton
                            android:id="@+id/btnAccept"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginEnd="24dp"
                            android:layout_marginStart="24dp"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            fancy:fb_borderColor="#FFFFFF"
                            fancy:fb_borderWidth="1dp"
                            fancy:fb_defaultColor="#4bb765"
                            fancy:fb_focusColor="#73d682"
                            fancy:fb_iconPosition="left"
                            fancy:fb_radius="30dp"
                            fancy:fb_text="เลือก"
                            fancy:fb_textColor="#FFFFFF"
                            fancy:fb_textSize="16sp" />
                    </FrameLayout>


                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameRibbon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/container"
        android:layout_alignTop="@+id/container"
        android:layout_marginStart="2dp"
        android:layout_marginTop="-10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageViewRibbon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ribbon2" />

        <TextView
            android:id="@+id/tvRibbon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:text="คนขับคนโปรด" />
    </FrameLayout>

</RelativeLayout>