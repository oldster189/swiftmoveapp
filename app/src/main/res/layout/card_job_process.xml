<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        fancy:cardElevation="2dp"
        fancy:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvIdJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="#152642"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvStatusJob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="@drawable/bg_oval"
                    android:paddingBottom="8dp"
                    android:paddingEnd="36dp"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:text="เสร็สสิ้น"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_correct" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/frameFrom"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true">


                        <ImageView
                            android:id="@+id/imgViewFrom"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/oval_btn_from" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="A"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/tvPositionFrom"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/frameFrom"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="ตำบล บ้านดู่ อำเภอเมืองเชียงราย, เชียงราย 57100"
                        android:textColor="#2b2b2b"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvTotalPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="฿ 544.76"
                        android:textColor="#d3833f"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <FrameLayout
                        android:id="@+id/frameTo"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true">


                        <ImageView
                            android:id="@+id/imgViewTo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:src="@drawable/oval_btn_to" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="B"
                            android:textColor="#ffffff"
                            android:textStyle="bold" />
                    </FrameLayout>


                    <TextView
                        android:id="@+id/tvPositionTo"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="8dp"
                        android:layout_toEndOf="@+id/frameTo"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:text="ตำบล นางแล อำเภอเมืองเชียงราย, เชียงราย 57100"
                        android:textColor="#2b2b2b"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tvTypeCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="รถกระบะ"
                        android:textColor="#2b2b2b" />
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เวลานัดหมาย:"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=" 01 ก.พ. 59  | 15:30 น."
                    android:textColor="#5b5b5b"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linExpTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"

                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="เหลือเวลาดำเนินการ: "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvExpTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25:00 นาที"
                    android:textColor="@color/colorRed"
                    android:textSize="16sp" />

            </LinearLayout>


            <mehdi.sakout.fancybuttons.FancyButton xmlns:fancy="http://schemas.android.com/apk/res-auto"
                android:id="@+id/btnJob"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="12dp"
                android:paddingEnd="60dp"
                android:paddingStart="50dp"
                android:paddingTop="12dp"
                fancy:fb_defaultColor="#55acee"
                fancy:fb_focusColor="#8cc9f8"
                fancy:fb_radius="3dp"
                fancy:fb_text="ยกเลิกการเรียกใช้บริการ"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textSize="16sp" />
            <mehdi.sakout.fancybuttons.FancyButton xmlns:fancy="http://schemas.android.com/apk/res-auto"
                android:id="@+id/btnReJob"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="12dp"
                android:paddingEnd="60dp"
                android:paddingStart="50dp"
                android:paddingTop="12dp"
                fancy:fb_defaultColor="@color/colorSilverTree"
                fancy:fb_focusColor="#8ccea3"
                fancy:fb_radius="3dp"
                fancy:fb_text="เรียกใช้งานอีกครั้ง"
                fancy:fb_textColor="#FFFFFF"
                fancy:fb_textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>